[sub_resource type="GDScript" id="GDScript_1pg6c"]
script/source = "extends Area2D

@onready var anim = $AnimatedSprite2D

func _ready():
	#body_entered.connect(_on_body_entered)
	if anim:
		anim.play(\"Llama\")

func _on_body_entered(body):
	if body.is_in_group(\"player\"):
		body.add_flame()
		$AudioStreamPlayer2D.play()
		pickup_effect()

func pickup_effect():
	$CollisionShape2D.set_deferred(\"disabled\", true)

	var tween = create_tween()
	tween.set_parallel(true)
	tween.tween_property(anim, \"rotation_degrees\", anim.rotation_degrees + 900, 0.6)
	tween.tween_property(self, \"position:y\", position.y - 100, 0.6)
	tween.tween_property(anim, \"modulate:a\", 0.0, 0.8)
	tween.finished.connect(queue_free)
"

